<project name="jtcgen" default="test">
  <path id="classPath">
    <pathelement location="lib/junit.jar" />
  	<pathelement location="lib/mockito-all-1.10.19.jar" />
  </path>
  <target name="test" description="runs JUNit tests">
    <junit printsummary="yes" fork="true" haltonfailure="yes">
      <classpath path="${lib.dir}">
      	<pathelement location="scr/"/>
   		<pathelement location="tests/"/>
      	<pathelement location="tests/br/com/jtcgen/builder/"/>
	    <path refid="classPath" />
	  </classpath>
	  <test name="br.com.jtcgen.builder.TestSuiteBuilder">
	  	<formatter type="plain" usefile="false" />
	  </test>	
	</junit>
  </target>
</project>